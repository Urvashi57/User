<!-- app/views/home/sign_up.html.erb -->
<div class="mainContent">
  <div class="grid">
    <h1 class="largeHeader">Sign up</h1>
    <p class="centeredDescription col_4">Already signed up? You can <a href="">log in here.</a></p>
    <div class="col_1">
      <form action="/users/create" accept-charset="UTF-8" method="post" class="signupForm">

        <label for="username">Username</label><br>
        <input class="shortInput" id="name" type="text"><br>

        <label for="email">Email</label><br>
        <input class="shortInput" id="email" type="text"><br>

        <label for="password">Password</label><br>
        <input class="shortInput" id="password" type="text"><br>

        <label for="confirmPassword">Confirm password</label><br>
        <input class="shortInput" id="confirmPassword" type="text"><br>

      </form>

    </div><!-- end column 2 contact form -->
    <div class="col_4">
      <%# <a href="" class="button createAccount" type="Submit">Create account</a> %>
       <input name="commit" type="submit" value="Submit" data-disable-with="Create User"/>
    </div>

  </div><!-- end grid -->
</div><!-- end mainContent -->